{
  "name": "simple-stager",
  "version": "1.0.0",
  "description": "AI-powered real estate staging SaaS application",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/database",
    "packages/shared"
  ],
  "scripts": {
    "postinstall": "npx prisma generate --schema=packages/database/schema.prisma",
    "build": "turbo build",
    "start": "cd apps/web && npm start",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "db:migrate": "turbo db:migrate",
    "db:generate": "turbo db:generate"
  },
  "dependencies": {
    "prisma": "^5.6.0",
    "@prisma/client": "^5.6.0"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "npm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
